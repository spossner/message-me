<h4 class="ui center aligned medium icon header">
  <i class="inverted orange circular coffee icon"></i>
  Say something
</h4>

<div class="ui centered column grid">
  <div class="eight wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
      <% if @messages %>
        <div class="ui feed">
          <% @messages.each do |m| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= m.user.username %></em>: <%= m.body %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      </div><!--content-->
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui icon input">
              <input type="text" placeholder="Chat message...">
              <i class="bordered inverted orange edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div><!-- twelve wide column -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div><!-- two wide column -->
</div>




